@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container py-5">
    <!-- Title -->
    <div class="text-center mb-5">
        <h1 class="fw-bold text-dark mb-3">👑 Admin Dashboard</h1>
        <p class="text-muted fs-5">Manage everything in your restaurant system easily</p>
        <hr class="w-25 mx-auto" />
    </div>

    <!-- Dashboard Buttons -->
    <div class="row g-4 text-center">
        <!-- Categories -->
        <div class="col-lg-3 col-md-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body py-5">
                    <i class="bi bi-tags fs-1 text-primary mb-3"></i>
                    <h4 class="fw-bold mb-3">Categories</h4>
                    <p class="text-muted mb-4">Manage all food categories and types.</p>
                    <a asp-controller="Category" asp-action="GetAll" class="btn btn-primary w-100">
                        Go to Categories
                    </a>
                </div>
            </div>
        </div>

        <!-- Menu Items -->
        <div class="col-lg-3 col-md-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body py-5">
                    <i class="bi bi-egg-fried fs-1 text-success mb-3"></i>
                    <h4 class="fw-bold mb-3">Menu Items</h4>
                    <p class="text-muted mb-4">Add, update, or remove items from the menu.</p>
                    <a asp-controller="MenuItem" asp-action="Menu" class="btn btn-success w-100">
                        Manage Menu
                    </a>
                </div>
            </div>
        </div>

        <!-- Orders -->
        <div class="col-lg-3 col-md-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body py-5">
                    <i class="bi bi-receipt fs-1 text-warning mb-3"></i>
                    <h4 class="fw-bold mb-3">Orders</h4>
                    <p class="text-muted mb-4">Track and manage all customer orders.</p>
                    <a asp-controller="Order" asp-action="Getall" class="btn btn-warning text-white w-100">
                        View Orders
                    </a>
                </div>
            </div>
        </div>

        <!-- Customers -->
        <div class="col-lg-3 col-md-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body py-5">
                    <i class="bi bi-people fs-1 text-danger mb-3"></i>
                    <h4 class="fw-bold mb-3">Customers</h4>
                    <p class="text-muted mb-4">See registered users and their details.</p>
                    <a asp-controller="Customer" asp-action="GetAll" class="btn btn-danger w-100">
                        View Customers
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .card {
        transition: all 0.3s ease;
        border-radius: 15px;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        }

    .btn {
        font-weight: 600;
        border-radius: 30px;
        transition: all 0.2s ease;
    }

        .btn:hover {
            transform: scale(1.05);
        }
</style>
