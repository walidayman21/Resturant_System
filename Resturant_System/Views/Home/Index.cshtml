                                    <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg">
                                        <i class="bi bi-box-arrow-in-right me-2"></i>Login to Account
                                    </a>

                                    <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary btn-lg">
                                        <i class="bi bi-person-plus me-2"></i>Create Account
                                    </a>

                                    <div class="divider">
                                        <span>or</span>
                                    </div>

                                    <a asp-controller="GuestMenu" asp-action="Menu" class="btn btn-light btn-lg border">
                                        <i class="bi bi-eye me-2"></i>Continue as Guest
