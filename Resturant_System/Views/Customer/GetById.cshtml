@model Resturant_System.Models.Customer

@{
    ViewData["Title"] = "Customer Details";
    Layout = "_AdminLayout"; 
}

<h2 class="mb-4 text-center">👤 Customer Details</h2>
<div class="mb-3 text-end">
    <a asp-action="GetAll" class="btn btn-secondary">⬅ Back to Customers</a>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h4 class="card-title">Customer Information</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Phone Number</dt>
            <dd class="col-sm-9">@Model.PhoneNumber</dd>

            <dt class="col-sm-3">Address</dt>
            <dd class="col-sm-9">@Model.Address</dd>

            <dt class="col-sm-3">User ID</dt>
            <dd class="col-sm-9">@Model.UserId</dd>
        </dl>
    </div>
</div>

@if (Model.Orders != null && Model.Orders.Any())
{
    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title">🧾 Orders</h4>
            <hr />

            @foreach (var order in Model.Orders)
            {
                <div class="border rounded p-3 mb-3">
                    <h5>Order #@order.Id</h5>
                    <p><strong>Status:</strong> @order.OrderStatus</p>
                    <p><strong>Total:</strong> @order.TotalAmount.ToString("C")</p>
                    <p><strong>Date:</strong> @order.CreatedAt.ToShortDateString()</p>

                    @if (order.OrderItems != null && order.OrderItems.Any())
                    {
                        <table class="table table-bordered table-striped mt-3">
                            <thead>
                                <tr>
                                    <th>Item Name</th>
                                    <th>Quantity</th>
                                    <th>Price</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in order.OrderItems)
                                {
                                    <tr>
                                        <td>@item.MenuItem?.Name</td>
                                        <td>@item.Quantity</td>
                                        <td>@item.UnitPrice.ToString("C")</td>
                                        <td>@(item.Quantity* item.UnitPrice)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">No items in this order.</p>
                    }
                </div>
            }
        </div>
    </div>
}
else
{
    <div class="alert alert-warning text-center">
        No orders found for this customer.
    </div>
}

<div class="mt-4">
    <a asp-action="GetAll" class="btn btn-secondary">⬅ Back to List</a>
</div>
