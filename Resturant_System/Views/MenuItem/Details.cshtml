@model MenuItem
@{
    ViewData["Title"] = "Details";
}


<div class="container py-3">
    <!-- Header Section -->
    <div class="row mb-2">
        <div class="col-12">
            <div class="d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center">
                    <a asp-action="Menu" class="btn btn-sm btn-light me-2">
                        <i class="bi bi-arrow-left"></i>
                    </a>
                    <h3 class="fw-bold text-dark mb-0">
                        <i class="bi bi-info-circle me-2"></i>Menu Item Details
                    </h3>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Image Column -->
        <div class="col-lg-5 mb-3">
            <div class="card shadow-sm border-0">
                @if (!string.IsNullOrEmpty(Model.ImgUrl))
                {
                    <img src="@Model.ImgUrl" class="card-img-top rounded" alt="@Model.Name" style="height: 400px; object-fit: cover;">
                }
                else
                {
                    <div class="bg-light d-flex align-items-center justify-content-center rounded" style="height: 400px;">
                        <div class="text-center">
                            <i class="bi bi-image text-muted" style="font-size: 5rem;"></i>
                            <p class="text-muted mt-2">No Image Available</p>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Details Column -->
        <div class="col-lg-7">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body p-4">
                    <!-- Title and Price -->
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <h2 class="fw-bold text-dark mb-0">@Model.Name</h2>
                        <span class="badge bg-success fs-4 px-3 py-2">$@Model.Price.ToString("F2")</span>
                    </div>

                    <!-- Status Badges -->
                    <div class="mb-3">
                        @if (Model.IsAvailable)
                        {
                            <span class="badge bg-success me-1">
                                <i class="bi bi-check-circle me-1"></i>Available
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-danger me-1">
                                <i class="bi bi-x-circle me-1"></i>Unavailable
                            </span>
                        }

                        @if (Model.IsSpicy)
                        {
                            <span class="badge bg-warning text-dark me-1">🌶️ Spicy</span>
                        }

                        @if (Model.IsHealthy)
                        {
                            <span class="badge bg-info me-1">🥗 Healthy</span>
                        }

                        @if (Model.IsDeleted)
                        {
                            <span class="badge bg-dark">
                                <i class="bi bi-trash me-1"></i>Deleted
                            </span>
                        }
                    </div>

                    <hr>

                    <!-- Description -->
                    <div class="mb-4">
                        <h5 class="fw-semibold text-secondary mb-2">
                            <i class="bi bi-text-paragraph me-2"></i>Description
                        </h5>
                        <p class="text-muted">
                            @(string.IsNullOrEmpty(Model.Description) ? "No description available." : Model.Description)
                        </p>
                    </div>

                    <!-- Category -->
                    <div class="mb-4">
                        <h5 class="fw-semibold text-secondary mb-2">
                            <i class="bi bi-tag me-2"></i>Category
                        </h5>
                        <span class="badge bg-secondary fs-6 px-3 py-2">@Model.Category.Name</span>
                    </div>

                    <!-- Metadata -->
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="card bg-light border-0">
                                <div class="card-body p-3">
                                    <h6 class="text-muted small mb-1">
                                        <i class="bi bi-calendar-plus me-1"></i>Created At
                                    </h6>
                                    <p class="fw-semibold mb-0">@Model.CreatedAt.ToString("MMMM dd, yyyy")</p>
                                    <small class="text-muted">@Model.CreatedAt.ToString("hh:mm tt")</small>
                                </div>
                            </div>
                        </div>

                        @if (Model.UpdatedAt.HasValue)
                        {
                            <div class="col-md-6">
                                <div class="card bg-light border-0">
                                    <div class="card-body p-3">
                                        <h6 class="text-muted small mb-1">
                                            <i class="bi bi-pencil me-1"></i>Last Updated
                                        </h6>
                                        <p class="fw-semibold mb-0">@Model.UpdatedAt.Value.ToString("MMMM dd, yyyy")</p>
                                        <small class="text-muted">@Model.UpdatedAt.Value.ToString("hh:mm tt")</small>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="row mt-3">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-body p-3">
                    <div class="d-flex gap-2">
                        <a asp-action="Menu" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Back to Menu
                        </a>
                        <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="bi bi-pencil me-1"></i>Edit Item
                        </a>
                        <button type="button" class="btn btn-danger"
                                onclick="showDeleteModal('@Model.Id', '@Html.Raw(System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(Model.Name))')">
                            <i class="bi bi-trash me-1"></i>Delete Item
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="bi bi-exclamation-triangle me-2"></i>Confirm Delete
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="text-center py-3">
                    <i class="bi bi-trash text-danger" style="font-size: 4rem;"></i>
                    <h5 class="mt-3">Are you sure you want to delete this item?</h5>
                    <p class="text-muted mb-0">
                        <strong id="itemNameDisplay"></strong>
                    </p>
                    <p class="text-danger small mt-2">This action cannot be undone!</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-1"></i>Cancel
                </button>
                <form id="deleteForm" asp-action="Delete" asp-controller="MenuItem" method="get" style="display: inline;">
                    <input type="hidden" id="deleteItemId" name="id" value="" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i>Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: all 0.3s ease;
    }

    .btn {
        transition: all 0.2s ease;
    }

        .btn:hover {
            transform: translateY(-2px);
        }

    .badge {
        font-weight: 500;
    }

    .modal-content {
        border: none;
        border-radius: 15px;
        overflow: hidden;
    }

    .modal-header {
        border-bottom: none;
    }

    .modal-footer {
        border-top: 1px solid #dee2e6;
    }
</style>

@section Scripts {
    <script>
        var deleteModal = null;

        document.addEventListener('DOMContentLoaded', function() {
            deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
        });

        function showDeleteModal(itemId, itemName) {
            document.getElementById('itemNameDisplay').textContent = itemName;
            document.getElementById('deleteItemId').value = itemId;
            deleteModal.show();
        }
    </script>
}

